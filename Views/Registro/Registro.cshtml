@{
    ViewData["Title"] = "F&F Security - Cadastro";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/registrocss/styles.css" />
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container">
        <div class="center">
            <h1>Cadastre-se</h1>
            <form method="POST" action="/Registro/ConfirmarRegistro">
                <div class="txt_field">
                    <input type="text" name="Nome" required />
                    <span></span>
                    <label>Nome</label>
                </div>
                <div class="txt_field">
                    <input type="text" name="Registro" required />
                    <span></span>
                    <label>CPF ou CNPJ</label>
                </div>
                <div class="txt_field">
                    <input type="email" name="Email" required />
                    <span></span>
                    <label>Email</label>
                </div>
                <div class="txt_field">
                    <input type="password" name="Senha" required />
                    <span></span>
                    <label>Senha</label>
                </div>
                <div class="txt_field">
                    <input type="password" name="ConfirmarSenha" required />
                    <span></span>
                    <label>Confirmar Senha</label>
                </div>
                <input name="submit" type="submit" value="Confirmar" />
                <div class="signup_link">
                    Ja tem uma conta? <a href="/Home/Index">Entrar</a>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div id="errorMessage" class="alert alert-warning alert-dismissible fade show" role="alert" style="margin-top: 20px; border: 1px solid #ffc107; border-radius: 10px; background: linear-gradient(135deg, #fff3cd 0%, #ffe8a1 100%); color: #856404; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); padding: 15px; position: relative;">
                        <strong>@ViewBag.ErrorMessage</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="position: absolute; top: 10px; right: 10px; background: none; border: none; color: #856404; font-size: 1.5rem; font-weight: bold; cursor: pointer;">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <script>
                        setTimeout(function () {
                            $('#errorMessage').alert('close');
                        }, 5000); // 5000 milliseconds = 5 seconds
                    </script>
                }
            </form>
        </div>
    </div>

    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <script src="~/js/main.js"></script>
</body>
</html>
