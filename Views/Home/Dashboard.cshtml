                                    // Verificar se AlertasRecentes está definido antes de usá-lo
                                    if (Model.AlertasRecentes.Count > 0)
                                    {
                                        // Organizar os dados pela data
                                        var array_datas = Model.AlertasRecentes
                                        .OrderByDescending(alertaRecente => alertaRecente.DateTime)
                                        .Select(alertaRecente => alertaRecente.DateTime)
                                        .ToArray();
                                        // Iterar sobre os arrays e exibir os alertas capturados recentemente, começando do mais recente
                                        foreach (var data in array_datas)
                                        {
                                            // Encontrar o índice correspondente da data atual no array original
                                            var index = Array.IndexOf(Model.AlertasRecentes.Select(alertaRecente => alertaRecente.DateTime).ToArray(), data);
                                            <div class="card mb-3">
                                                <div class="card-body">
                                                    <div class="row align-items-center">
                                                        <div class="col-md-3 col-6 mb-3 mb-md-0">
                                                            <div class="d-flex align-items-center">
                                                                <i class="fa fa-camera fa-lg mr-2"></i>
                                                                <h5 class="card-title mb-0">Câmera</h5>
                                                            </div>
                                                            <p class="card-text text-truncate" style="white-space: nowrap;">@Model.AlertasRecentes[index].Camera</p>
                                                        </div>
                                                        <div class="col-md-3 col-6 mb-3 mb-md-0">
                                                            <div class="d-flex align-items-center">
                                                                <i class="fa fa-car fa-lg mr-2"></i>
                                                                <h5 class="card-title mb-0">Placa</h5>
                                                            </div>
                                                            <div style="position: relative;">
                                                                <p class="card-text text-truncate" style="white-space: nowrap; z-index: 1;">
                                                                    <a href="@Model.AlertasRecentes[index].Url">
                                                                        @Model.AlertasRecentes[index].Placa
                                                                    </a>
                                                                </p>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3 col-6 mb-3 mb-md-0">
                                                            <div class="d-flex align-items-center">
                                                                <i class="fa fa-cube fa-lg mr-2"></i>
                                                                <h5 class="card-title mb-0">Modelo</h5>
                                                            </div>
                                                            <p class="card-text text-truncate" style="white-space: nowrap;">@Model.AlertasRecentes[index].Modelo</p>
                                                        </div>
                                                        <div class="col-md-3 col-6 mb-3 mb-md-0" style="min-width: 90px;">
                                                            <div class="d-flex align-items-center">
                                                                <i class="fa fa-calendar fa-lg mr-2"></i>
                                                                <h5 class="card-title mb-0">Data</h5>
                                                            </div>
                                                            @{
                                                                #region[Ajustar forma da Data]
                                                                DateTime dataAlerta = Model.AlertasRecentes[index].DateTime;
                                                                string timePart = dataAlerta.ToString("HH:mm");
                                                                string amPmPart = dataAlerta.Hour < 12 ? "AM" : "PM";

                                                                if (dataAlerta.Date != DateTime.Now.Date)
                                                                {
                                                                    formattedDate = $"{timePart} {amPmPart} {dataAlerta:MM/dd}";
                                                                }
                                                                else
                                                                {
                                                                    formattedDate = $"{timePart} {amPmPart}";
                                                                }
                                                                #endregion
                                                            }
                                                            <p class="card-text text-truncate" style="white-space: nowrap;">@formattedDate</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <p>Sem Alertas Recentes</p>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
