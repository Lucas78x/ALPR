                <div class="row">
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i>Ultima Placa</h3>
                            </div>
                            <div class="panel-body">
                                @{

                                    if (lastindex != -1)
                                    {
                                        <img src="@Model.ImagemRecentes[lastindex].Url" alt="Imagem" style="width: 100%;">
                                    }
                                }
                                <div class="col-md-3">
                                    @{
                                        if (lastindex != -1)
                                        {
                                            <h5 class="card-title text-nowrap" style="display: inline-block; vertical-align: middle;"><i class="fa fa-camera fa-lg"></i>ﾠ @Model.ImagemRecentes[lastindex].Camera</h5>
                                            <h5 class="card-title text-nowrap" style="display: inline-block; vertical-align: middle;"><i class="fa fa-fw fa-car"></i><a href="URL_DE_DESTINO" style="display: inline; text-decoration: none;">ﾠ @Model.ImagemRecentes[lastindex].Placa</a></h5>
                                            <h5 class="card-title text-nowrap" style="display: inline-block; vertical-align: middle;"><i class="fa fa-fw fa-cube"></i>ﾠ @Model.ImagemRecentes[lastindex].Modelo</h5>
                                            <h5 class="card-title text-nowrap" style="display: inline-block; vertical-align: middle;"><i class="fa fa-calendar fa-lg"></i>ﾠ @($"{Model.ImagemRecentes[lastindex].DateTime:HH:mm}")</h5>
                                        }
                                        else
                                        {
                                            <h5 class="card-title text-nowrap" style="display: inline-block; vertical-align: middle;"><i class="fa fa-camera fa-lg"></i></h5>
                                            <h5 class="card-title text-nowrap" style="display: inline-block; vertical-align: middle;"><i class="fa fa-fw fa-car"></i><a href="" style="display: inline; text-decoration: none;"></a></h5>
                                            <h5 class="card-title text-nowrap" style="display: inline-block; vertical-align: middle;"><i class="fa fa-fw fa-cube"></i></h5>
                                            <h5 class="card-title text-nowrap" style="display: inline-block; vertical-align: middle;"><i class="fa fa-calendar fa-lg"></i></h5>
                                        }
                                    }
                                </div>
                                <div id="morris-donut-chart"></div>
                                <div class="text-right">
                                    <a href="#">Ver Detalhes <i class="fa fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Placas Recentes</h3>
                            </div>
                            <div class="panel-body" style="max-height: 400px; overflow-y: auto;">
                                <div class="list-group" id="placas-recentes">
                                    @{
                                        int CompareDates(string a, string b)
                                        {
                                            return DateTime.Parse(b).CompareTo(DateTime.Parse(a));
                                        }

                                        // Verificar se array_cameras está definido antes de usá-lo
                                        if (Model.ImagemRecentes.Count > 0)
                                        {
                                            // Organizar os dados pela data
                                            var array_datas = Model.ImagemRecentes
                                            .OrderByDescending(imagemRecente => imagemRecente.DateTime)
                                            .Select(imagemRecente => imagemRecente.DateTime)
                                            .ToArray();
                                            // Iterar sobre os arrays e exibir os grupos de placas capturadas recentemente, começando do mais recente
                                            foreach (var data in array_datas)
                                            {
                                                // Encontrar o índice correspondente da data atual no array original
                                                var index = Array.IndexOf(Model.ImagemRecentes.Select(imagemRecente => imagemRecente.DateTime).ToArray(), data);
                                                <div class="card mb-3">
                                                    <div class="card-body">
                                                        <div class="row align-items-center">
                                                            <div class="col-md-3 col-6 mb-3 mb-md-0">
                                                                <div class="d-flex align-items-center">
                                                                    <i class="fa fa-camera fa-lg mr-2"></i>
                                                                    <h5 class="card-title mb-0">Câmera</h5>
                                                                </div>
                                                                <p class="card-text text-truncate" style="white-space: nowrap;">@Model.ImagemRecentes[index].Camera</p>
                                                            </div>
                                                            <div class="col-md-3 col-6 mb-3 mb-md-0">
                                                                <div class="d-flex align-items-center">
                                                                    <i class="fa fa-car fa-lg mr-2"></i>
                                                                    <h5 class="card-title mb-0">Placa</h5>
                                                                </div>
                                                                <div style="position: relative;">
                                                                    <p class="card-text text-truncate" style="white-space: nowrap; z-index: 1;">
                                                                        <div style="position: relative;">
                                                                            <a href="@Model.ImagemRecentes[index].Url" target="_blank" onmouseover="showImage('@Model.ImagemRecentes[index].Url', @index)" onmouseout="hideImage(@index)">
                                                                                @Model.ImagemRecentes[index].Placa
                                                                            </a>
                                                                            <img id="@index" src="" alt="Thumbnail" style="z-index:1; position: absolute; display: none; max-width: 250px; max-height: 250px; border: 2px solid #DDD; top: -85px; left: 85px;">
                                                                        </div>
                                                                    </p>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-3 col-6 mb-3 mb-md-0">
                                                                <div class="d-flex align-items-center">
                                                                    <i class="fa fa-cube fa-lg mr-2"></i>
                                                                    <h5 class="card-title mb-0">Modelo</h5>
                                                                </div>
                                                                <p class="card-text text-truncate" style="white-space: nowrap;">@Model.ImagemRecentes[index].Modelo</p>
                                                            </div>
                                                            <div class="col-md-3 col-6 mb-3 mb-md-0" style="min-width: 90px;">
                                                                <div class="d-flex align-items-center">
                                                                    <i class="fa fa-calendar fa-lg mr-2"></i>
                                                                    <h5 class="card-title mb-0">Data</h5>
                                                                </div>
                                                                @{
                                                                    #region[Ajustar forma da Data]
                                                                    DateTime dataImagem = Model.ImagemRecentes[index].DateTime;
                                                                    string timePart = dataImagem.ToString("HH:mm");
                                                                    string amPmPart = dataImagem.Hour < 12 ? "AM" : "PM";

                                                                    if (dataImagem.Date != DateTime.Now.Date)
                                                                    {
                                                                        formattedDate = $"{timePart} {amPmPart} {dataImagem:MM/dd}";
                                                                    }
                                                                    else
                                                                    {
                                                                        formattedDate = $"{timePart} {amPmPart}";
                                                                    }
                                                                    #endregion
                                                                }
                                                                <p class="card-text text-truncate" style="white-space: nowrap;">@formattedDate</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            </div>

                            <script>
                                function showImage(url, index) {
                                    var thumbnail = document.getElementById(index);
                                    thumbnail.src = url;

                                    // Exibir a imagem no contêiner separado
                                    thumbnail.style.display = "block";
                                }


                                function hideImage(index) {
                                    // Ocultar a imagem quando o mouse sai
                                    var thumbnail = document.getElementById(index);
                                    thumbnail.style.display = "none";
                                }
                            </script>
                            <form action="/Home/FilterByCamera" method="get">
                                <div class="text-right">
                                    <label for="camera-filter">Filtrar por câmera:</label>
                                    <select id="camera-filter" name="camera">
                                        <option value="">Todas as Câmeras</option>
                                        @foreach (var camera in Model.Cameras)
                                        {
                                            <option value="@camera.Camera">@camera.Camera</option>
                                        }
                                    </select>
                                    <input type="hidden" name="ImagemRecentes" value="@JsonConvert.SerializeObject(Model.ImagemRecentes)" />
                                    <button type="submit">Filtrar</button>
                                    <a href="#">View All Activity <i class="fa fa-arrow-circle-right"></i></a>
                                </div>
                            </form>


                        </div>
