@using F.Models;
@model ViewModel;
@{
    ViewData["Title"] = "F&F Security - Placas";
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"]</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/dashboardcss/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/dashboardcss/sb-admin.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/font-awesome-4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a  id="dashboardLink" class="navbar-brand">F & F Security</a>
                <form id="dashboardForm" action="/Home/Index" method="get" style="display: none;">
                    <input type="submit" value="Submit" />
                </form>

                <script>
                    document.getElementById('dashboardLink').addEventListener('click', function (event) {
                        event.preventDefault(); // Impede o comportamento padrão do link
                        this.classList.add('active');
                        document.getElementById('dashboardForm').submit();
                    });
                </script>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                <li class="dropdown">
                    <a  class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>@ViewBag.Email<b class="caret"></b></a>
                    <ul class="dropdown-menu">

                        <li>
                            <a><i class="fa fa-fw fa-gear"></i>Configurações</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <form action="/Home/Logout" method="post" style="display: inline;">
                                <button type="submit" style="background: none; border: none; color: inherit; cursor: pointer; font: inherit; outline: inherit;">
                                    <i class="fa fa-fw fa-power-off"></i> Sair
                                </button>
                                @Html.AntiForgeryToken()
                            </form>

                        </li>
                    </ul>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="index.html"><i class="fa fa-fw fa-dashboard"></i> Painel</a>
                    </li>
                    <li>
                        <a href="#" id="chartLink">
                            <i class="fa fa-solid fa-camera"></i>ﾠALPR
                        </a>
                        <form id="chartForm" action="/Cameras/RedirectAlpr" method="post" style="display: none;">
                            <input type="submit" value="Submit" />
                        </form>
                        <script>
                            document.getElementById('chartLink').addEventListener('click', function () {
                                this.classList.add('active');
                                document.getElementById('chartForm').submit();
                            });
                        </script>
                    </li>
                    <li>
                        <a href="#" id="settingsLink">
                            <i class="fa fa-fw fa-wrench"></i>Cadastro
                        </a>
                        <form id="settingsForm" action="/Home/RedirectSettings" method="post" style="display: none;">
                            <input type="submit" value="Submit" />
                        </form>
                        <script>
                            document.getElementById('settingsLink').addEventListener('click', function () {
                                this.classList.add('active');
                                document.getElementById('settingsForm').submit();
                            });
                        </script>
                    </li>
                    <li class="active">
                        <a><i class="fa fa-solid fa-car"></i> Placas</a>
                    </li>
                    <li>
                        <a href="#" id="alertasLink">
                            <i class="fa fa-fw fa-exclamation-triangle"></i> Alertas
                        </a>
                        <form id="alertasForm" action="/Home/RedirectAlertas" method="post" style="display: none;">
                            <input type="submit" value="Submit" />
                        </form>
                        <script>
                            document.getElementById('alertasLink').addEventListener('click', function () {
                                this.classList.add('active');
                                document.getElementById('alertasForm').submit();
                            });
                        </script>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper">

            <div id="page-wrapper">

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">
                                Pesquisa por Placa de Carro
                            </h1>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="index.html"><i class="fa fa-dashboard"></i> Painel</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <i class="fa fa-edit"></i> Pesquisa por Placa de Carro
                                </li>
                            </ol>
                        </div>
                    </div>
                    <!-- /.row -->

                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" id="search-form">

                                <div class="form-group">
                                    <label for="plate-input">Placa do Carro</label>
                                    <input type="text" class="form-control" id="plate-input" placeholder="Insira a placa do carro">
                                </div>

                                <div class="form-group">
                                    <label for="start-date">Data Inicial</label>
                                    <input type="date" class="form-control" id="start-date">
                                </div>

                                <div class="form-group">
                                    <label for="start-time">Hora Inicial</label>
                                    <input type="time" class="form-control" id="start-time">
                                </div>

                                <div class="form-group">
                                    <label for="end-date">Data Final</label>
                                    <input type="date" class="form-control" id="end-date">
                                </div>

                                <div class="form-group">
                                    <label for="end-time">Hora Final</label>
                                    <input type="time" class="form-control" id="end-time">
                                </div>

                                <div class="form-group">
                                    <label for="camera-select">Seleção de Câmera</label>
                                    <select class="form-control" id="camera-select">
                                        @foreach (var cameras in Model.Cameras.Cameras)
                                        {
                                            <option>@cameras.Name</option>
                                        }
                                    </select>
                                </div>

                                <button type="button" class="btn btn-primary" onclick="search()">Pesquisar</button>
                                <button type="reset" class="btn btn-secondary">Limpar</button>

                            </form>
                        </div>
                    </div>
                    <!-- /.row -->
                    <!-- Result Section -->
                    <div class="row result-container">
                        <div class="col-lg-12">
                            <h3>Resultado da Pesquisa</h3>
                            <div id="search-result" class="card-group">
                                <!-- Resultado da pesquisa será exibido aqui -->
                            </div>
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </div>

            </div>
            <!-- /#page-wrapper -->

        </div>
        <!-- /#wrapper -->
        <script>
            // Função para simular uma pesquisa (substitua por sua lógica real de pesquisa)
            function search() {
                var plate = document.getElementById('plate-input').value;
                var startDate = document.getElementById('start-date').value;
                var startTime = document.getElementById('start-time').value;
                var endDate = document.getElementById('end-date').value;
                var endTime = document.getElementById('end-time').value;
                var camera = document.getElementById('camera-select').value;

                // Combinar data e hora no formato ISO
                var startDateTimeString = `${startDate}T${startTime}`;
                var endDateTimeString = `${endDate}T${endTime}`;

                // Chamar o método no C# passando strings
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("BuscarImagens", "Home")',
                    data: {
                        plate: plate,
                        startDate: startDateTimeString,
                        endDate: endDateTimeString,
                        camera: camera
                    },
                    success: function (data) {
                        var resultHtml = '';
                        data.forEach(imagem => {
                            var time = formatDateTime(imagem.dateTime);
                            resultHtml += `
                                                                                <div class="card mb-3">
                                                                                    <div class="card-body">
                                                                                        <div class="row align-items-center">
                                                                                            <div class="col-md-3 col-6">
                                                                                                <div class="d-flex align-items-center">
                                                                                                    <i class="fa fa-car fa-lg mr-2"></i>
                                                                                                    <h5 class="card-title mb-0">Placa</h5>
                                                                                                </div>
                                                                                                <p class="card-text">${imagem.placa}</p>
                                                                                            </div>
                                                                                            <div class="col-md-3 col-6">
                                                                                                <div class="d-flex align-items-center">
                                                                                                    <i class="fa fa-cube fa-lg mr-2"></i>
                                                                                                    <h5 class="card-title mb-0">Modelo</h5>
                                                                                                </div>
                                                                                                <p class="card-text">${imagem.modelo}</p>
                                                                                            </div>
                                                                                            <div class="col-md-3 col-6">
                                                                                                <div class="d-flex align-items-center">
                                                                                                    <i class="fa fa-calendar fa-lg mr-2"></i>
                                                                                                    <h5 class="card-title mb-0">Hora</h5>
                                                                                                </div>
                                                                                                     <p class="card-text">${time}</p>
                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                <style>
                                                                .card {
                                                                    border: 1px solid #ccc;
                                                                    border-radius: 10px;
                                                                    margin-bottom: 20px;
                                                                    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
                                                                }

                                                                .card-body {
                                                                    padding: 20px;
                                                                }

                                                                .card-title {
                                                                    font-size: 1.2rem;
                                                                    font-weight: bold;
                                                                    margin-bottom: 5px;
                                                                }

                                                                .card-text {
                                                                    font-size: 1rem;
                                                                    color: #666;
                                                                }

                                                                .card-icon {
                                                                    font-size: 1.5rem;
                                                                    margin-right: 10px;
                                                                }
                                                            </style>
                                                                            `;
                        });
                        $('#search-result').html(resultHtml);
                        $('.result-container').show();

                    }
                });
            }

            function formatDateTime(dateTimeString) {
                const dateTime = new Date(dateTimeString);
                const hours = String(dateTime.getHours()).padStart(2, '0');
                const minutes = String(dateTime.getMinutes()).padStart(2, '0');
                const seconds = String(dateTime.getSeconds()).padStart(2, '0');
                return `${hours}:${minutes}:${seconds}`;
            }
        </script>

        <!-- /#wrapper -->
        <!-- jQuery Version 1.11.0 -->
        <script src="~/js/jquery-1.11.0.js"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="~/js/bootstrap.min.js"></script>

</body>

</html>
