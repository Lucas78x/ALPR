@using F.Models;
@model List<Imagem>

@foreach (var imagemRecente in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-3 col-6 mb-3 mb-md-0">
                    <div class="d-flex align-items-center">
                        <i class="fa fa-camera fa-lg mr-2"></i>
                        <h5 class="card-title mb-0">CÃ¢mera</h5>
                    </div>
                    <p class="card-text text-truncate" style="white-space: nowrap;">@imagemRecente.Camera</p>
                </div>
                <div class="col-md-3 col-6 mb-3 mb-md-0">
                    <div class="d-flex align-items-center">
                        <i class="fa fa-car fa-lg mr-2"></i>
                        <h5 class="card-title mb-0">Placa</h5>
                    </div>
                    <p class="card-text text-truncate" style="white-space: nowrap;"><a href="#">@imagemRecente.Placa</a></p>
                </div>
                <div class="col-md-3 col-6 mb-3 mb-md-0">
                    <div class="d-flex align-items-center">
                        <i class="fa fa-cube fa-lg mr-2"></i>
                        <h5 class="card-title mb-0">Modelo</h5>
                    </div>
                    <p class="card-text text-truncate" style="white-space: nowrap;">@imagemRecente.Modelo</p>
                </div>
                <div class="col-md-3 col-6 mb-3 mb-md-0" style="min-width: 90px;">
                    <div class="d-flex align-items-center">
                        <i class="fa fa-calendar fa-lg mr-2"></i>
                        <h5 class="card-title mb-0">Data</h5>
                    </div>
                    <p class="card-text text-truncate" style="white-space: nowrap;">
                        @{
                            DateTime dataImagem = imagemRecente.DateTime;
                            if (dataImagem.Date != DateTime.Now.Date)
                            {
                                @dataImagem.ToString("dd/MM HH:mm")
                            }
                            else
                            {
                                @dataImagem.ToString("HH:mm")
                            }
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
}
